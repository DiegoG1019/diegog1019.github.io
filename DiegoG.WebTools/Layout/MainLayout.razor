@using DiegoG.WebTools.Services
@using DiegoG.WebTools.Pages
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a class="top-email nav-link" @onclick="ShowContactModal">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                </svg>
                @Language.CurrentLanguage.ContactMe
            </a>
            <InputSelect TValue="string" @bind-Value="CurrentLanguage" id="language-selector" class="form-select">
                @foreach(var lang in AvailableLanguages.Languages.DistinctBy(x => x.Value.LanguageName, StringComparer.OrdinalIgnoreCase))
                {
                    <option value="@lang.Key">@lang.Value.LanguageName</option>
                }
            </InputSelect>
            <a href="https://github.com/DiegoG1019" class="nav-link" target="_blank">
                <span class="bi bi-gh-fill-nav-menu" aria-hidden="true"></span> GitHub
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <div class="footer">
            <hr />
            <p>This website, and all its content excluding 3rd party logos and icons belong to Diego García, © 2025 All rights reserved.</p>
            <br />
        </div>

    </main>
</div>
